{
    "name": "turtlemilitia/laravel-featureflags",
    "description": "Laravel package for Turtle Militia feature flag evaluation",
    "type": "library",
    "license": "MIT",
    "homepage": "https://turtlemilitia.com",
    "keywords": [
        "laravel",
        "feature-flags",
        "feature-toggles",
        "ab-testing",
        "experimentation",
        "rollout",
        "targeting"
    ],
    "authors": [
        {
            "name": "Turtle Militia",
            "homepage": "https://turtlemilitia.com"
        }
    ],
    "support": {
        "issues": "https://github.com/turtlemilitia/laravel-featureflags/issues",
        "source": "https://github.com/turtlemilitia/laravel-featureflags"
    },
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/cache": "^11.0|^12.0",
        "illuminate/http": "^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.1",
        "larastan/larastan": "^3.8",
        "friendsofphp/php-cs-fixer": "^3.91",
        "phpbench/phpbench": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "FeatureFlags\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FeatureFlags\\Tests\\": "tests/",
            "FeatureFlags\\Benchmarks\\": "benchmarks/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "FeatureFlags\\FeatureFlagsServiceProvider"
            ],
            "aliases": {
                "Feature": "FeatureFlags\\Facades\\Feature"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html coverage/",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/php-cs-fixer fix",
        "format:check": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "benchmark": "vendor/bin/phpbench run --report=aggregate"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
